    <!-- Configuration for node4, three hops to reach the receiver through node5 -->
    <route hosts="node4" destination="10.0.0.7" netmask="255.255.255.255" gateway="10.0.0.5" interface="wlan0" metric="3"/>
    <!-- Configuration for node5, two hops to reach the receiver through node6 -->
    <route hosts="node5" destination="10.0.0.7" netmask="255.255.255.255" gateway="10.0.0.6" interface="wlan0" metric="2"/>
    <!-- Configuration for node1 to reach the receiver directly -->
    <route hosts="node6" destination="10.0.0.7" netmask="255.255.255.255" gateway="10.0.0.7" interface="wlan0" metric="1"/>
